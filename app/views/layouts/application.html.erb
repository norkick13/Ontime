<!DOCTYPE html>
<html>
<head>
  <title>On Time</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application-print", :media => "print" %>
</head>
<body>

<div class='side-bar'>
	<div class='logo'>
		<%= link_to root_path do %>
		<%= image_tag '' %>
		<% end %>
	</div>
</div>
   
   <ul>
   	<li><%= link_to "On Time", root_path %></li>
    	<li><%= link_to "About", about_path %></li>
   	<li><%= link_to "Contact Us", contact_path %></li>
   	<li><%= link_to "Help", help_path %></li>
   	<li><%= link_to "Make Schedule", make_path %></li> 
   </ul>

<% if !user_signed_in? %>
   <p class="sign_in">Sign In</p>
   <% end %>
</div>


<div id="main_content">
	<div id="header">
		<% if current_page?(root_path)%>
		<p>All Schedule</p>
		<% elsif current_page?(about_path)%>
		<p>About</p>
		<% elsif current_page?(contact_path)%>
		<p>Contact Us</p>
		<% elsif current_page?(make_path)%>
		<p>Make Schedule</p>
		<% elsif current_page?(help_path)%>
		<p>Help</p>
		<% else %>
		<%= link_to "Back to All Staff Schedules", root_path %>
		<% end %>

		<%# if user_signed_in? %>
		<div class="buttons">
			<div class="button"><%= link_to "New Schdule", make_path %></button>
				<button class="button">Log Out</button>
			</div>
			<%# end %>
		</div>


		<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert") %>
		<% end %>


<%= yield %>

	<div id="calendar"></div>
</div>
<script >
	

$(document).ready(function(){

	$('#calendar').fullCalendar();

})
</script>
</body>
</html>
