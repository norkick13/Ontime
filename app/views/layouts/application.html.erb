<!DOCTYPE html>
<html>
<head>
  <title>On Time</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='side-bar'>
	<div class='logo'>
		<%= link_to root_path do %>
		<%= image_tag '' %>
		<% end %>
	</div>
</div>
   
   <ul>
   	<li><%= link_to "On Time", root_path %></li>
   	<li><%= link_to "About", home_about_path %></li>
   	<li><%= link_to "Contact Us", home_contact_path %></li>
   	<li><%= link_to "Help", home_help_path %></li>
   	<li><%= link_to "Create Schedule", home_create_path %></li>
   </ul>

<% if !user_signed_in? %>
   <p class="Sign_in">Sign In</p>
</div>
<% end %>

<div id="main_content">
	<div id="header">
		<% if current_page?(root_path)%>
		<p>All Schedule</p>
		<% elsif current_page?(home_about_path)%>
		<p>About</p>
		<% elsif current_page?(home_contact_path)%>
		<p>Contact Us</p>
		<% elsif current_page?(home_create_path)%>
		<p>Create Schedule</p>
		<% elsif current_page?(home_help_path)%>
		<p>Help</p>
		<% else %>
		<%= link_to "Back to All Schedule", root_path %>
		<% end %>

		<% if user_signed_in? %>
		<div class="buttons">
			<div class="button"><%= link_to "New Schdule", new_schedule_path %></button>
				<button class="button">Log Out</button>
			</div>
			<% end %>
		</div>


		<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert") %>
		<% end %>


<%= yield %>
</div>

</body>
</html>
